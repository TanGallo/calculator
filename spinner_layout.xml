<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/spinnerImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="2dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/project_image"
        />

    <TextView
        android:id="@+id/spinnerText"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/spinnerImage"
        android:layout_toStartOf="@id/downArrow"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textColor="@color/colorTeal5"
        />

    <ImageView
        android:id="@+id/downArrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentEnd="true"
        android:scaleType="fitCenter"
        android:contentDescription="@string/choose_a_project"
        android:src="@drawable/ic_arrow_drop_down_teal_24dp"
        />

</RelativeLayout>