<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTeal5">

    <ImageView
        android:id="@+id/slide1Image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/knit_fits_logo_k"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="-70dp"
        android:contentDescription="@string/slide1Description" />

    <TextView
        android:id="@+id/slide1Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/slide1Title"
        android:textColor="@color/colorWhite"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_below="@id/slide1Image"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/slide1Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/slide1Description"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_below="@id/slide1Title"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        />

</RelativeLayout>